{{ define "base" }}
<!doctype html>
<html>
    {{- template "header" . }}
   <body>
      <div id="page-container">
         <div id="content-wrap">
         {{- template "navbar" . }}
            {{- if .IsIndex}}
            <section class="hero container">
               <h1>{{.SiteName}}</h1>
               <h5>{{.Description}}</h5>
            </section>
            {{- end}}
            {{- template "post" . }}
         </div>
         {{- template "footer" . }}
      </div>
   </body>
</html>
{{- end }}
